<mvc:View controllerName="br.com.idxtecAplicativos.controller.Aplicativos"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:t="sap.ui.table">
	<App id="app">
		<pages>
			<Page showHeader="false">
				<content>
					<VBox class="sapUiSmallMargin">
						<Panel headerText="Aplicativos">
							<t:Table id="tableApp"
								rows="{
									path: '/Aplicativos',
									parameters: {
										expand: 'ModuloDetails'
									}
								}"
								selectionMode="Single"
								selectionBehavior="Row"
								enableSelectAll="false"
								editable="true"
								visibleRowCountMode="Interactive"
								enableBusyIndicator="true"
								alternateRowColors="true"
								enableCustomFilter="false">
								<t:toolbar>
									<Toolbar>
										<Title text="Lista de Aplicativos"/>
									</Toolbar>
								</t:toolbar>
								<t:columns>
									<t:Column filterProperty="AppId" sortProperty="AppId">
										<Label text="ID do App"/>
										<t:template>
											<Text text="{AppId}"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="Codigo" sortProperty="Codigo">
										<Label text="Código"/>
										<t:template>
											<Text text="{Codigo}"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="Descricao" sortProperty="Descricao">
										<Label text="Descrição"/>
										<t:template>
											<Text text="{Descricao}"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="NomeMenu" sortProperty="NomeMenu">
										<Label text="Nome no Menu"/>
										<t:template>
											<Text text="{NomeMenu}"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="Path" sortProperty="Path">
										<Label text="URL"/>
										<t:template>
											<Text text="{Path}"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="ModuloDetails/Nome" sortProperty="ModuloDetails/Nome">
										<Label text="Modulo" />
										<t:template>
											<Text text="{ModuloDetails/Nome}"/>
										</t:template>
									</t:Column>
								</t:columns>
								<t:footer>
									<Toolbar>
										<Button icon="sap-icon://refresh" press="onRefresh"/>
										<ToolbarSpacer/>
										<Button icon="sap-icon://filter"/>
										<Button icon="sap-icon://clear-filter"/>
									</Toolbar>
								</t:footer>
							</t:Table>
						</Panel>
					</VBox>
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button icon="sap-icon://add" text="Incluir novo" press="onIncluirApp"/>
						<Button icon="sap-icon://edit" text="Editar" press="onEditarApp"/>
						<Button icon="sap-icon://delete" text="Remover" press="onRemoverApp"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>